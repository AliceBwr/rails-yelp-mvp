<h1>Info on <%=@restaurant.name %></h1>
  <p> Phone number:  <%=@restaurant.phone_number %></p>
  <p> Address: <%=@restaurant.address %></p>
  <p> Category : <%=@restaurant.category %></p>
  <p> Reviews: </p>
    <% @restaurant.reviews.each do |review| %>
    <div class="review",>
      <h3><%= review.content %> - <%= review.rating%></h3>
    </div>
    <% end %>
<p><%= link_to "Create a review for this restaurant", new_restaurant_review_path(@restaurant), class: 'btn btn-success' %></p>
<p><%= link_to "Back to restaurants", restaurants_path, class: 'btn btn-success' %></p>
